{
  "name": "bolt",
  "private": true,
  "devDependencies": {
    "concurrently": "^4.1.0",
    "docz": "^0.13.4",
    "docz-theme-default": "^0.12.17",
    "lerna": "^3.6.0",
    "lint-staged": "^8.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.15.3",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,json,tsx,ts}": [
      "prettier --write --single-quote true --trailing-comma all --print-width 120 --semi false",
      "git add"
    ],
    "*.{tsx,ts}": [
      "tslint --fix",
      "git add"
    ]
  },
  "pre-commit": "lint:staged",
  "scripts": {
    "lerna:dev": "concurrently \"yarn lerna:build:watch\"  \"rm -rf .docz && yarn docz:dev\"",
    "lerna:build": "lerna run build --stream",
    "lerna:build:watch": "lerna run build --stream -- --watch",
    "lerna:publish": "yarn lerna:build && lerna publish",
    "lerna:test": "lerna run test --stream",
    "lerna:test:cov": "lerna run test --stream -- --no-cache --coverage",
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "lint:staged": "lint-staged",
    "template:component": "node ./templates/scripts/createComponent"
  }
}
