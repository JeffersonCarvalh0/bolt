{
  "name": "bolt",
  "private": true,
  "devDependencies": {
    "concurrently": "^4.1.0",
    "docz": "^0.12.17",
    "jest": "^23.6.0",
    "lerna": "^3.6.0",
    "lint-staged": "^8.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.15.3",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lerna:dev": "concurrently \"yarn lerna:tsc:watch\"  \"yarn docz:build\"",
    "lerna:tsc": "lerna run tsc",
    "lerna:tsc:watch": "lerna run tsc:watch",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:publish": "yarn run:tsc && lerna publish",
    "lerna:test": "jest --config jest.json",
    "lerna:test:cov": "jest --no-cache --coverage --config jest.json",
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "lint:staged": "lint-staged"
  },
  "lint-staged": {
    "*.{js,json,tsx,ts}": [
      "prettier --write --single-quote true --trailing-comma all --print-width 120 --semi false",
      "git add"
    ]
  },
  "pre-commit": "lint:staged"
}
